# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================
# Get this from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Your deployed server URL (must be HTTPS)
# Example: https://your-app.railway.app/telegram-webhook
WEBHOOK_URL=https://your-domain.railway.app/telegram-webhook

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here

# Storage bucket name for images
BUCKET_NAME=violations

# ============================================
# MODEL CONFIGURATION
# ============================================
# URL to download your trained YOLO model
MODEL_URL=https://your-model-url.com/best.pt

# ============================================
# OPTIONAL CONFIGURATION
# ============================================
# Port for local development (default: 5000)
PORT=5000

# Debug mode (default: False)
DEBUG=False

# Tesseract OCR path (usually auto-detected)
# TESSERACT_CMD=/usr/bin/tesseract
